<h1>Customer: <%= @customer.name %></h1>
<ol>
  <% @customer.items.each do |item| %>
    <li id="item_<%= item.id %>">
      <%= item.name %>
      <ul>
        <li>Price: <%= item.price %></li>
        <li>Supermarket: <%= item.supermarket.name %>
      </ul>
    </li>
  <% end %>
</ol>

<%= form_with url: "/customer_items/new", method: :post, local: true do |f| %>
  <%= f.hidden_field :customer_id, value: @customer.id %>
  <%= f.text_field :item_id %>
  <%= f.submit "Add Item" %>
<% end %>